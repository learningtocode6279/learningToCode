# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET	 /						   controllers.HomeController.index()
GET	 /media					 controllers.HomeController.index()
GET	 /theory				 controllers.TheoryController.theoryPage()
GET	 /community 		 controllers.CommunityController.communityPage()
GET	 /art        		 controllers.ArtController.artPage()
GET	 /merch      		 controllers.MerchController.merchPage()
GET	 /login      		 controllers.LoginController.loginPage()

# Map static resources from the /public folder to the /assets URL path
GET	 /assets/*file		    controllers.Assets.versioned(path="/public", file: Asset)
